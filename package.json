{
  "name": "vscode-copilot-insights",
  "displayName": "Copilot Insights",
  "description": "Understand your GitHub Copilot plan, quotas, and limits at a glance",
  "version": "1.6.0",
  "publisher": "emanuelebartolesi",
    "icon": "img/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kasuken/vscode-copilot-insights.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/kasuken/vscode-copilot-insights",
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Other",
    "AI",
    "Chat",
    "Machine Learning",
    "Programming Languages"
  ],
  "keywords": [
    "ai",
    "copilot",
    "github copilot",
    "copilot insights",
    "copilot metrics",
    "copilot quota",
    "copilot limits",
    "ai pair programming",
    "developer analytics",
    "usage tracking",
    "productivity"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "copilot-insights",
          "title": "Copilot Insights",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "copilot-insights": [
        {
          "type": "webview",
          "id": "copilotInsights.sidebarView",
          "name": "Insights"
        }
      ]
    },
    "commands": [
      {
        "command": "vscode-copilot-insights.refresh",
        "title": "Copilot Insights: Refresh",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "vscode-copilot-insights.refresh",
          "when": "view == copilotInsights.sidebarView",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Copilot Insights",
      "properties": {
        "copilotInsights.showMood": {
          "type": "boolean",
          "default": true,
          "description": "Show a fun 'mood' indicator for your remaining quota instead of the standard status."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}